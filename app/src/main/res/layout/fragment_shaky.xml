<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.home.ShakyFragment">

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="活动"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="公告"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="攻略"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shaky"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

    </LinearLayout>
</layout>