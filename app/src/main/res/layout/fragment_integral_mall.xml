<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_game_integral" />

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_integral_mall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="积分商城"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />

            <RadioButton
                android:id="@+id/rb_integral_task"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="积分任务"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />

            <RadioButton
                android:id="@+id/rb_integral_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="积分记录"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />

            <RadioButton
                android:id="@+id/rb_integral_rule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="积分规则"
                app:bl_checked_drawable="@color/color_yellow"
                app:bl_checked_textColor="@color/white"
                app:bl_unChecked_drawable="@color/white"
                app:bl_unChecked_textColor="@color/color_title" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</layout>